//Question Link : https://www.hackerrank.com/challenges/utopian-tree

import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

class Solution{
    public static void main(String[] args){
        Scanner stdin = new Scanner(System.in);
        int t = stdin.nextInt();
        while(t>0){
        int n = stdin.nextInt();
        int height = 1;
        for(int i=1;i<=n/2;i++){
            height = height*2;
            height = height + 1;
        }
        if(n%2!=0)
            height = height*2;
        
        System.out.println(height);
        t--;}
    }
}
